<!DOCTYPE html>
<html lang="en">
<%- include ('./patials/head') %>
  <body>
    <div style="margin-top:90px ;">
      <% if(error_msg !='' ){ %>
        <%= error_msg %>
          <% } %>
    </div>
    <div class="columns is-multiline" style="margin-top: 120px; margin-left: 20px; margin-right: 20px;">
      <% players.forEach(function(player) { %>
        <div class="column is-one-quarter">
          <div class="card">
            <div class="card-image">
              <figure class="image is-3by5">

                <img src="<%= player.image %>" alt="Placeholder image">
              </figure>
            </div>
            <div class="card-content">
              <div class="content">
                Name: <%= player.name %>
              </div>
              <div class="content">
                Nation: <%= player.nation.name %>
              </div>
              <a href="/players/<%=player.id%>" class="button is-primary">Detail</a>
            </div>

          </div>
        </div>
        <% }) %>
    </div>
  </body>

</html>