<!DOCTYPE html>
<html lang="en">
<%- include ('./patials/head') %>

    <body>
        <h1 style="text-align: center; margin-top: 100px; font-size: 40px; font-weight: 500; margin-bottom: 20px;">
            UPDATE NATION</h1>
        <div style="margin-top: 100px;">
            <% if(error_msg !='' ){ %>
                <%= error_msg %>
                    <% } %>
                        <% if(success_msg !='' ){ %>
                            <%= success_msg %>
                                <% } %>
        </div>
        <form method="post" class="container is-max-desktop" style="margin-top: 10px;">
            <div class="field is-horizontal" style="margin-bottom: 30px;">
                <div class="field-label is-normal">
                    <label class="label">Name</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input class="form-control" name="name" type="text" required value="<%= user.name %>">
                        </div>
                        <!-- <p class="help is-danger">
                        This field is required
                    </p> -->
                    </div>
                </div>
            </div>


            <div class="field is-horizontal" style="margin-bottom: 30px;">
                <div class="field-label is-normal">
                    <label class="label">Year of birth</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input class="form-control" name="yob" required type="number" min="1945"
                                value="<%= user.YOB %>">
                        </div>
                        <!-- <p class="help is-danger">
                        This field is required
                    </p> -->
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <button class="btn btn-primary" type="submit" style="margin-left: 180px;">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </body>
    <script>
    // Show error message

    </script>

</html>